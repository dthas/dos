#include	"type.h"
#include	"prototype.h"
#include	"kernel.h"
#include	"global.h"
#include	"net.h"
#include	"mesg.h"

PUBLIC	s32 ping(s8 *buf)
{
	struct s_mesg mesg;
	//struct s_package pkg;

	//modi on 2012-11-30	
	//struct iaddr ip;
	//s2ip(&ip, buf);
	//mesg.msg.parm4	= ((ip.addr1)<<24) | ((ip.addr2)<<16) | ((ip.addr3)<<8)	| ip.addr4 ;
	mesg.msg.buf1	= buf;

	mesg.msg.parm1	= 8;	// type
	mesg.msg.parm2	= 0;	// code

	//mesg.msg.buf1	= &pkg;

	mesg.dest_pid	= PROC_NET;
	mesg.type	= ICMP_0_8;
	mesg.func	= SYN;
		
	send_msg(&mesg);
}
